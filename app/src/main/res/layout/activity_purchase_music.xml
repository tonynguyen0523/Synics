<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_purchase_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.synics.PurchaseMusic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="14dp"
        android:paddingLeft="32dp"
        android:paddingBottom="6dp"
        android:paddingRight="32dp"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/purchase_music_page"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Song Selected" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_activity_will_appear_when_the_use_clicks_on_the_shopping_cart_in_the_music_player_this_activyt_is_used_to_purchase_the_selected_music"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:paddingTop="32dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:gravity="center"
        android:textSize="32sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="PayPal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:gravity="center"
        android:textSize="32sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Android Pay"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:gravity="center"
        android:textSize="32sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Credit Card"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mini_player_home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/structural24"/>
        <LinearLayout
            android:id="@+id/mini_player"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="1dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Song Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="1dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Artist"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="right"
            android:src="@drawable/play48"/>

    </LinearLayout>


</LinearLayout>
