<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_artist_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.synics.ArtistPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/background"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Artist Page"/>

    <TextView
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_activity_will_appear_if_the_user_clicks_on_the_artist_name_in_the_music_player_this_page_will_show_all_the_songs_created_by_this_artist"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Songs"/>

    <ListView
        android:id="@+id/artist_song_list"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        ></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mini_player_home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/structural24"/>
        <LinearLayout
            android:id="@+id/mini_player"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="1dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Song Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="1dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Artist"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="right"
            android:src="@drawable/play48"/>

    </LinearLayout>

</LinearLayout>
